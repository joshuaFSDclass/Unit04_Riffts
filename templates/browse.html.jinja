<body class = "bg-zinc-500">
{% include "components/navbar.html.jinja" %}
 <h1 class="text-center text-6xl text-red-600 bg-orange-900 ml-40 mr-40 pt-5 pb-5">
 BROWSE PRODUCTS
 </h1>
<main class =" grid grid-cols-3 gap-2 ml-3 mt-10 bg-gray-300">
    {% for x in products %}
        <a href="/product/{{ x['ID']}}" class="grid text-center shadow-md">
            <img class="h-50 mx-auto mt-8" src="{{ x['Image'] }}"> <br>
            {{x ["Name"]}}<br>
            ${{x ["Price"]}}<br>
            {{x["Brand"]}}<br>
            {{x["Size"]}}<br>
            {{x["Category"]}}
        </a>
    {%endfor%}
</main>
 

 
</body>
</html>